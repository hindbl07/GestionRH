<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - GestionRH</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- MDB5 & Bootstrap Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body, html {
            height: 100%;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background-color: #fff;
            border-right: 1px solid #ddd;
            padding-top: 1rem;
            z-index: 1030;
        }

        .content-wrapper {
            margin-left: 250px;
            width: calc(100% - 250px);
        }

        .nav-link {
            color: #333;
        }

            .nav-link.active {
                background-color: #1266f1;
                color: #fff !important;
                border-radius: 5px;
            }

        .navbar {
            z-index: 1020;
        }

        .avatar-img {
            height: 32px;
            border-radius: 50%;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="text-center mb-4">
            <a href="/" class="text-primary fs-4 fw-bold text-decoration-none">GestionRH</a>
        </div>
        <ul class="nav flex-column px-3">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" href="/"><i class="bi bi-speedometer2 me-2"></i>Dashboard</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Employes"><i class="bi bi-people me-2"></i>Employés</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Candidats"><i class="bi bi-person-plus me-2"></i>Candidats</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Departements"><i class="bi bi-journal-code me-2"></i>Départements</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Postes"><i class="bi bi-calendar2-week me-2"></i>Postes</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Entretiens"><i class="bi bi-calendar-event me-2"></i>Entretiens</a>
            </li>
        </ul>
    </div>

    <!-- Content Wrapper -->
    <div class="content-wrapper">
        @if (User.Identity.IsAuthenticated)
        {           
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm px-4">
                <div class="container-fluid">
                    <form class="d-flex align-items-center w-50">
                        <input class="form-control me-2" type="search" placeholder="Rechercher..." aria-label="Search">
                        <button class="btn btn-outline-secondary" type="submit"><i class="bi bi-search"></i></button>
                    </form>
                    <div class="d-flex align-items-center gap-3">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
        }
        <!-- Page Content -->
        <main class="p-4">
            @RenderBody()
        </main>
    </div>

    <!-- MDB JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.2/mdb.min.js"></script>
    
    <!-- jQuery + Validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
  
    @RenderSection("Scripts", required: false)
</body>
</html>
