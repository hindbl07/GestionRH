@using GestionRH.Models.ViewModels
@using Microsoft.AspNetCore.Mvc.Rendering
@model EditRoleViewModel

@{
    ViewData["Title"] = "Modifier le rôle de l'utilisateur";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="EditRole" asp-controller="Admin" asp-route-id="@Model.Role">
    <div class="form-group">
        <label asp-for="Role" class="control-label"></label>
        <select asp-for="Role" asp-items="Html.GetEnumSelectList<RoleUtilisateur>()" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Sauvegarder</button>
</form>
