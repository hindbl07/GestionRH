@model GestionRH.Models.Employe

@{
    ViewData["Title"] = "Suppression de l'employé";
}

<div class="container py-4">
    <div class="alert alert-warning shadow-sm rounded">
        <h4 class="alert-heading"> Confirmation de suppression</h4>
        <p>Êtes-vous sûr de vouloir supprimer cet employé ? Cette action est irréversible.</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <strong>Informations de l'employé à supprimer</strong>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nom)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nom)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Matricule)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Matricule)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EmailPro)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EmailPro)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DateEmbauche)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DateEmbauche)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Departement)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Departement.Nom)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Poste)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Poste.Titre)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Annuler
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Supprimer définitivement
            </button>
        </div>
    </form>
</div>
