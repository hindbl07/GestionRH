@model GestionRH.Models.Employe

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="EmailPro" class="control-label"></label>
                <input asp-for="EmailPro" class="form-control" />
                <span asp-validation-for="EmailPro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEmbauche" class="control-label"></label>
                <input asp-for="DateEmbauche" class="form-control" />
                <span asp-validation-for="DateEmbauche" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartementId" class="control-label"></label>
                <select asp-for="DepartementId" class="form-control" asp-items="@(ViewData["DepartementId"] as SelectList)">
                    <option value="">Sélectionner un département</option> <!-- Ajout d'une option vide -->
                </select>
                <span asp-validation-for="DepartementId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PosteId" class="control-label"></label>
                <select asp-for="PosteId" class="form-control" asp-items="@(ViewData["PosteId"] as SelectList)">
                    <option value="">Sélectionner un poste</option> <!-- Ajout d'une option vide -->
                </select>
                <span asp-validation-for="PosteId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<div class="alert alert-danger">
    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <p>@error.ErrorMessage</p>
    }
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
