@model GestionRH.Models.Employe

@{
    ViewData["Title"] = "Créer un Employé";
}

<h2 class="mb-4"><i class="fas fa-user-plus"></i> @ViewData["Title"]</h2>

@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.SelectMany(v => v.Errors).Any())
{
    <div class="alert alert-danger">
        <strong><i class="fas fa-exclamation-triangle"></i> Erreurs détectées :</strong>
        <ul class="mb-0">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="Nom" class="form-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EmailPro" class="form-label"></label>
                <input asp-for="EmailPro" class="form-control" />
                <span asp-validation-for="EmailPro" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DateEmbauche" class="form-label"></label>
                <input asp-for="DateEmbauche" class="form-control" type="date" />
                <span asp-validation-for="DateEmbauche" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Statut" class="form-label"></label>
                <select asp-for="Statut" class="form-select">
                    <option value="">-- Sélectionner un statut --</option>
                    <option value="Actif">Actif</option>
                    <option value="En congé">En congé</option>
                    <option value="Contrat terminé">Contrat terminé</option>
                </select>
                <span asp-validation-for="Statut" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DepartementId" class="form-label"></label>
                <select asp-for="DepartementId" class="form-select" asp-items="@(ViewData["DepartementId"] as SelectList)">
                    <option value="">-- Sélectionner un département --</option>
                </select>
                <span asp-validation-for="DepartementId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PosteId" class="form-label"></label>
                <select asp-for="PosteId" class="form-select" asp-items="@(ViewData["PosteId"] as SelectList)">
                    <option value="">-- Sélectionner un poste --</option>
                </select>
                <span asp-validation-for="PosteId" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2 mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Créer
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
