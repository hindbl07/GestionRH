@model GestionRH.Models.Employe

@{
    ViewData["Title"] = "Détails de l'employé";
}

<h2 class="mb-4"><i class="fas fa-id-badge"></i> @ViewData["Title"]</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h4 class="card-title mb-3"><i class="fas fa-user"></i> @Model.Nom</h4>

        <dl class="row">
            <dt class="col-sm-4">Matricule</dt>
            <dd class="col-sm-8">@Model.Matricule</dd>

            <dt class="col-sm-4">Email professionnel</dt>
            <dd class="col-sm-8">@Model.EmailPro</dd>

            <dt class="col-sm-4">Date d'embauche</dt>
            <dd class="col-sm-8">@Model.DateEmbauche.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-4">Département</dt>
            <dd class="col-sm-8">@Model.Departement?.Code</dd>

            <dt class="col-sm-4">Poste</dt>
            <dd class="col-sm-8">@Model.Poste?.Titre</dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-2">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Retour à la liste
    </a>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
        <i class="fas fa-edit"></i> Modifier
    </a>
</div>
