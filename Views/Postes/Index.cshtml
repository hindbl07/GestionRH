@model IEnumerable<GestionRH.Models.Poste>

@{
    Layout = "~/Views/Shared/_IndexLayout.cshtml"; // C'est ça la clé !
    ViewData["Title"] = "Liste des postes";
}

@section CustomAlert {
    @if (TempData["PosteCree"] != null)
    {
        <div class="alert alert-success">
            Candidat créé : <strong>@TempData["PosteCree"]</strong>
        </div>
    }
}

@section TopActions {
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-user-plus"></i> Ajouter un poste
    </a>
}

@section Filters {
    <form method="get" asp-action="Index" class="row g-3">
        <!-- champs de filtre ici -->
    </form>
}

<!-- Le tableau des données -->
<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Titre</th>
            <th>Description</th>
            <th>SalaireBase</th>
            <th>Departement</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Titre</td>
                <td>@item.Description</td>
                <td>@item.SalaireBase</td>
                <td>@item.Departement.Nom</td>
                <td>
                    <div class="btn-group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
