@model IEnumerable<GestionRH.Models.Entretien>

@{
    Layout = "~/Views/Shared/_IndexLayout.cshtml"; // C'est ça la clé !
    ViewData["Title"] = "Liste des entretiens";
}

@section CustomAlert {
    @if (TempData["EntretienCree"] != null)
    {
        <div class="alert alert-success">
            Entretien créé : <strong>@TempData["EntretienCree"]</strong>
        </div>
    }
}

@section TopActions {
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-user-plus"></i> Ajouter un entretien
    </a>
}

@section Filters {
    <form method="get" asp-action="Index" class="row g-3">
        <!-- champs de filtre ici -->
    </form>
}

<!-- Le tableau des données -->
<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Date</th>
            <th>Lieu</th>
            <th>Resultat</th>
            <th>Candidat</th>
            <th>Utilisateur</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
                <td>@item.Date</td>
                <td>@item.Lieu</td>
                <td>@item.Resultat</td>
                <td>@item.Candidat.Email</td>
                <td>@item.Utilisateur.Nom</td>
            <td>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>
