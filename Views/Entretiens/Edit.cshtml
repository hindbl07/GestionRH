@model GestionRH.Models.Entretien

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Entretien</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="UtilisateurId" /> <!-- Assigner automatiquement, pas modifiable -->


            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lieu" class="control-label"></label>
                <input asp-for="Lieu" class="form-control" />
                <span asp-validation-for="Lieu" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Resultat" class="form-label"></label>
                <select asp-for="Resultat" class="form-select">
                    <option value="">-- Sélectionner un résultat --</option>
                    <option>En attente</option>
                    <option>Accepté</option>
                    <option>Refusé</option>
                </select>
                <span asp-validation-for="Resultat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CandidatId" class="control-label"></label>
                <select asp-for="CandidatId" class="form-control" asp-items="ViewBag.CandidatId"></select>
                <span asp-validation-for="CandidatId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
