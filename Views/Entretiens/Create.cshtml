@model GestionRH.Models.Entretien

@{
    ViewData["Title"] = "Planifier un Entretien";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-group mb-3">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" class="form-control" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Lieu" class="form-label"></label>
        <input asp-for="Lieu" class="form-control" />
        <span asp-validation-for="Lieu" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Resultat" class="form-label"></label>
        <select asp-for="Resultat" class="form-select">
            <option value="">-- Sélectionner un résultat --</option>
            <option>En attente</option>
            <option>Accepté</option>
            <option>Refusé</option>
        </select>
        <span asp-validation-for="Resultat" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="CandidatId" class="form-label">Candidat</label>
        <select asp-for="CandidatId" class="form-select" asp-items="ViewBag.CandidatId"></select>
        <span asp-validation-for="CandidatId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Planifier</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}