@model GestionRH.Models.ViewModels.CandidatViewModel

@{
    ViewData["Title"] = "Créer un Candidat";
}

<h2 class="mb-4"><i class="fas fa-user-plus"></i> Créer un Candidat</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="Nom" class="form-label fw-bold"></label>
                <input asp-for="Nom" class="form-control" placeholder="Ex: Ahmed El Mansouri" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-bold"></label>
                <input asp-for="Email" class="form-control" placeholder="Ex: ahmed@gmail.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CV" class="form-label fw-bold"></label>
                <input asp-for="CV" type="file" class="form-control" />
                <span asp-validation-for="CV" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-check-circle"></i> Créer
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
