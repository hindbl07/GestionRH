@model GestionRH.Models.ViewModels.TransformerCandidatViewModel
@using GestionRH.Models

@{
    ViewData["Title"] = "Transformer en Employé";
}

<h2 class="mb-4"><i class="fas fa-user-check"></i> @ViewData["Title"]</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <strong><i class="fas fa-exclamation-circle"></i> Erreur :</strong> Le formulaire contient des données invalides.
        <ul class="mt-2 mb-0">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

@if (TempData["PostCalled"] != null)
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i> @TempData["PostCalled"]
    </div>
}

<form asp-controller="Candidats" asp-action="Transformer" method="post">
    <div class="mb-3">
        <label asp-for="Nom" class="form-label"></label>
        <input asp-for="Nom" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DepartementId" class="form-label"></label>
        <select asp-for="DepartementId" class="form-select" asp-items="@(ViewData["DepartementId"] as SelectList)">
            <option value="">-- Sélectionner un département --</option>
        </select>
        <span asp-validation-for="DepartementId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PosteId" class="form-label"></label>
        <select asp-for="PosteId" class="form-select" asp-items="@(ViewData["PosteId"] as SelectList)">
            <option value="">-- Sélectionner un poste --</option>
        </select>
        <span asp-validation-for="PosteId" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="CandidatId" />

    <div class="d-flex gap-2 mt-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Retour
        </a>
        <button type="submit" class="btn btn-success">
            <i class="fas fa-user-plus"></i> Transformer en Employé
        </button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
