@model GestionRH.Models.Candidat

@{
    ViewData["Title"] = "Suppression du candidat";
}

<div class="container py-4">
    <div class="alert alert-warning shadow-sm rounded">
        <h4 class="alert-heading">Confirmation de suppression</h4>
        <p>Êtes-vous sûr de vouloir supprimer ce candidat ? Cette action est irréversible.</p>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <strong>Informations du candidat à supprimer</strong>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nom)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nom)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.CV)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CV)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Statut)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Statut)</dd>

                @if (Model.Employe != null)
                {
                    <dt class="col-sm-3">Employé associé</dt>
                    <dd class="col-sm-9">@Model.Employe.Matricule</dd>
                }
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Annuler
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Supprimer définitivement
            </button>
        </div>
    </form>
</div>
